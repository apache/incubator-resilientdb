{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "templates", "dist"]
}  